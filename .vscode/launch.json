{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend (Next.js)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/web",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "port": 3000
        },
        {
            "name": "Backend (Quarkus)",
            "type": "java",
            "request": "launch",
            "mainClass": "io.quarkus.bootstrap.runner.QuarkusEntryPoint",
            "projectName": "socialops-api",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "QUARKUS_DATASOURCE_JDBC_URL": "jdbc:postgresql://localhost:5432/socialops",
                "QUARKUS_DATASOURCE_USERNAME": "postgres",
                "QUARKUS_DATASOURCE_PASSWORD": "postgres"
            }
        },
        {
            "name": "Full Stack (Docker Compose)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "docker-compose",
            "runtimeArgs": [
                "-f",
                "docker-compose.dev.yml",
                "up",
                "--build"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Frontend + Backend",
            "configurations": [
                "Frontend (Next.js)",
                "Backend (Quarkus)"
            ],
            "stopAll": true
        }
    ]
}