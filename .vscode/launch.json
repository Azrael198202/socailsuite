{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Frontend (Next.js)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "port": 3000
    },
    {
      "name": "Backend (Quarkus) – Attach 5005",
      "type": "java",
      "request": "attach",
      "hostName": "localhost",
      "port": 5005
    }
  ],
  "compounds": [
    {
      "name": "Run Frontend + Backend",
      "configurations": ["Frontend (Next.js)", "Backend (Quarkus) – Attach 5005"],
      "preLaunchTask": "quarkus:dev",
      "stopAll": true
    },
     {
      "name": "Run Backend",
      "configurations": ["Backend (Quarkus) – Attach 5005"],
      "preLaunchTask": "quarkus:dev",
      "stopAll": true
    }
  ]
}
